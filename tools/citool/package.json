{
  "name": "citool",
  "version": "0.0.0",
  "description": "Workrave CI/CD tools",
  "bin": {
    "citool": "./bin/citool.ts"
  },
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "rimraf ./dist && tsc -b",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "keywords": [],
  "author": "Rob Caelers",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.873.0",
    "@oclif/core": "4.5.2",
    "@oclif/plugin-commands": "^4.1.32",
    "@oclif/plugin-help": "6.2.32",
    "async": "^3.2.6",
    "date-fns": "^4.1.0",
    "isomorphic-git": "^1.33.0",
    "js-yaml": "^4.1.0",
    "mergician": "^2.0.2",
    "moment": "^2.30.1",
    "node-fetch": "^3.3.2",
    "nunjucks": "^3.2.4",
    "remark-parse": "^11.0.0",
    "semver": "^7.7.2",
    "source-map-support": "^0.5.21",
    "unherit": "^3.0.1",
    "unified": "^11.0.5",
    "word-wrap": "^1.2.5",
    "xtend": "^4.0.2"
  },
  "devDependencies": {
    "@oclif/test": "^4.1.13",
    "@types/async": "^3.2.25",
    "@types/chai": "^5",
    "@types/eslint": "^9.6.1",
    "@types/eslint-plugin-prettier": "^3.1.3",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "@types/nunjucks": "^3.2.6",
    "@types/semver": "^7.7.0",
    "@types/source-map-support": "^0.5.10",
    "@types/tar-fs": "^2.0.4",
    "@types/unzipper": "^0.10.11",
    "@types/xtend": "^4.0.6",
    "chai": "^6",
    "eslint": "^9.34.0",
    "eslint-config-oclif": "^6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "mocha": "^11",
    "oclif": "^4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  },
  "oclif": {
    "bin": "citool",
    "dirname": "citool",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-commands"
    ],
    "topicSeparator": " ",
    "topics": {}
  },
  "engines": {
    "node": ">=16.6.0"
  },
  "files": [
    "/bin",
    "/dist"
  ],
  "types": "dist/index.d.ts"
}
