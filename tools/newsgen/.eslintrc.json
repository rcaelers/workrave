{
  "plugins": ["prettier"],
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "prettier",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "warn"
  }
}
